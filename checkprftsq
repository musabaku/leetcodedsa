class Solution {
    public boolean isPerfectSquare(int num) {
        int a = num/2;
        int s = 1 ;
        int e = a;
        float f = a;
        int ans=0;
        if(num == 4){
            return true;
        }
        while(s!=e){
            if(s*s != num){
                s++;
            }
            else if(s*s == num){
                return true;
            }
        }
        return false;
    }
}